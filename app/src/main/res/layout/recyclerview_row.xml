<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
   android:elevation="4dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:orientation="vertical">

        <!-- Header Row -->
        <LinearLayout
            android:padding="1dp"
            android:background="@drawable/row_layout_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4.5"
            android:paddingBottom="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColor="@color/white"
                android:background="@drawable/row_layout_head"
                android:text="#"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:background="@drawable/row_layout_head"
                android:layout_weight="1"
                android:text="National ID"

                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:background="@drawable/row_layout_head"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Farm ID"

                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:background="@drawable/row_layout_head"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Farmer Name"

                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Actions"
               android:background="@drawable/row_layout_head"
                android:gravity="center" />
        </LinearLayout>

        <!-- Values Row -->
        <LinearLayout
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/grey_bg_nocorner"
            android:weightSum="4.5">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
               android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/grey_bg_nocorner"
                android:layout_weight="0.45"
                android:gravity="center" />

            <TextView
                android:id="@+id/nationalIdTextView"
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/farmIdTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/farmerNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center" />

            <!-- Action Icons -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/editIcon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Edit"
                    android:src="@drawable/edit" />

                <ImageView
                    android:id="@+id/deleteIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/delete"
                    android:contentDescription="Delete" />

                <ImageView
                    android:id="@+id/viewIcon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/view"
                    android:contentDescription="View" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
