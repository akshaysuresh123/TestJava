<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="5dp"
    android:background="@drawable/toolbar_bg"
    android:padding="16dp">



    <!-- Profile Section (Horizontal Layout with Profile Picture and Info) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:padding="8dp">

        <!-- Profile Image (Circular ImageView) -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/farmerprofile"
            android:layout_gravity="center_vertical"/>

        <!-- Profile Info: Name, ID, Email -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:gravity="start|center_vertical">

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/profileId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 123456"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/profileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="john.doe@example.com"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Quick Links Section (Horizontal Layout with Icon and Text) -->
    <LinearLayout
        android:id="@+id/quickLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:padding="8dp">

        <!-- Quick Links Icon -->
        <ImageView
            android:id="@+id/quickLinksIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/qr"
            android:layout_gravity="center_vertical"/>

        <!-- Quick Links Text -->
        <TextView
            android:id="@+id/quickLinksText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Links"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <!-- Quick Links Section (Horizontal Layout with Icon and Text) -->
    <LinearLayout
        android:id="@+id/RegistrationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:padding="8dp">

        <!-- Quick Links Icon -->
        <ImageView
            android:id="@+id/Farmer_registration"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/farmeradd"
            android:layout_gravity="center_vertical"/>

        <!-- Quick Links Text -->
        <TextView
            android:id="@+id/Farmer_registrationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farmer Registration"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <!-- Quick Links Section (Horizontal Layout with Icon and Text) -->
    <LinearLayout
        android:id="@+id/SignoutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:padding="8dp">

        <!-- Quick Links Icon -->
        <ImageView
            android:id="@+id/signout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/signout"
            android:layout_gravity="center_vertical"/>

        <!-- Quick Links Text -->
        <TextView
            android:id="@+id/signoutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signout"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>

    </LinearLayout>


</LinearLayout>

